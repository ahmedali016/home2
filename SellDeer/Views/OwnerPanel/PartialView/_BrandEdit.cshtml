<form method="post" action="editBrand" enctype="multipart/form-data">
    <div id="divEditCateg" style="display:none">
        <div class="box-body">
            <div class="form-group">
                <label for="editBrandName">Brand name</label>
                <input type="text" class="form-control" id="editBrandName" name="editBrandName" placeholder="Enter Brand" required>
                <input type="text" id="brandId" name="brandId" value="" hidden />
            </div>
            
        </div><!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-primary">Edit</button>
            <button type="reset" class="btn btn-primary" onclick="cancelEdit()">Cancel</button>
        </div>
    </div>
    </form>
